{
  "name": "memo-todo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "dev:desktop": "vite --config vite.config.desktop.ts",
    "dev:mobile": "vite --config vite.config.mobile.ts",
    "build": "tsc && vite build",
    "build:desktop": "tsc && vite build --config vite.config.desktop.ts",
    "build:mobile": "tsc && vite build --config vite.config.mobile.ts",
    "build:all": "npm run build:desktop && npm run build:mobile",
    "preview": "vite preview",
    "preview:desktop": "vite preview --config vite.config.desktop.ts",
    "preview:mobile": "vite preview --config vite.config.mobile.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testPathPatterns=security",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asdf03/memo-todo.git"
  },
